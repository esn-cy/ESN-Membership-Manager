<table border="0" cellpadding="0" cellspacing="0" role="presentation"
       style="background-color: #ffffff; width: 100%; border-collapse: collapse; border-spacing: 0; font-family: Arial, sans-serif;"
       width="100%">
    <tbody>
    <tr>
        <td>
            <table align="center" border="0" cellpadding="0" cellspacing="0"
                   role="presentation"
                   style="margin:auto; border-collapse:collapse; border-spacing:0; max-width: 800px; min-width: 320px;">
                <tbody>
                <tr>
                    <td align="center" width="100%">
                        <table border="0" cellpadding="0" cellspacing="0" role="presentation"
                               style="background-color: #ffffff;"
                               width="100%">
                            <tbody>
                            <tr>
                                <td align="center" style="padding: 10px 0;" width="100%">
                                    <img alt="ESN Logo" height="62"
                                         src="{{ logo_location }}" style="display: block; border: 0;" width="111">
                                </td>
                            </tr>
                            </tbody>
                        </table>

                        <table border="0" cellpadding="0" cellspacing="0" role="presentation" width="100%">
                            <tbody>
                            <tr>
                                <td style="padding: 9px 20px;" width="100%">
                                    <h1 style="font-family: Arial, sans-serif; font-weight: 700; text-align: center; margin: 0; line-height: 1.2; color: #2e3192; font-size: 34pt;">
                                        ESNcard Approval
                                    </h1>
                                </td>
                            </tr>
                            </tbody>
                        </table>

                        <table border="0" cellpadding="0" cellspacing="0" role="presentation" width="100%">
                            <tbody>
                            <tr>
                                <td style="padding: 9px 20px;" width="100%">
                                    <p style="font-family: Arial, sans-serif; font-weight: 400; text-align: center; font-size: 12pt; color: #1c1c1c; margin: 0; line-height: 1.38;">
                                        Hello {{ name }},
                                    </p>
                                    <p style="font-family: Arial, sans-serif; font-weight: 400; text-align: center; font-size: 12pt; color: #1c1c1c; margin: 15px 0 0 0; line-height: 1.38;">
                                        Your application for an ESNcard has been approved.
                                    </p>
                                </td>
                            </tr>
                            </tbody>
                        </table>

                        <table border="0" cellpadding="0" cellspacing="0" role="presentation" width="100%">
                            <tbody>
                            <tr>
                                <td style="padding: 9px 20px;" width="100%">
                                    <p style="font-family: Arial, sans-serif; font-weight: 400; text-align: center; font-size: 12pt; color: #1c1c1c; margin: 0; line-height: 1.38;">
                                        To get your ESNcard please proceed with the payment using the link below. After
                                        you complete your payment you will receive another email containing your ESNcard
                                        details.
                                    </p>
                                </td>
                            </tr>
                            </tbody>
                        </table>

                        <table border="0" cellpadding="0" cellspacing="0" role="presentation" width="100%">
                            <tbody>
                            <tr>
                                <td align="center" style="padding: 20px 0;" width="100%">
                                    <table border="0" cellpadding="0" cellspacing="0" role="button">
                                        <tbody>
                                        <tr>
                                            <td align="center"
                                                style="background-color: #2e3192; border-radius: 4px; padding: 12px 24px;">
                                                <a href="{{ payment_link }}"
                                                   style="font-family: Arial, sans-serif; font-size: 14pt; color: #f9f9f9; text-decoration: none; font-weight: 400; display: inline-block;"
                                                   target="_blank">
                                                    Pay Now
                                                </a>
                                            </td>
                                        </tr>
                                        </tbody>
                                    </table>
                                </td>
                            </tr>
                            </tbody>
                        </table>

                        <table border="0" cellpadding="0" cellspacing="0" role="presentation" width="100%">
                            <tbody>
                            <tr>
                                <td style="padding: 20px 20px;" width="100%">
                                    <div style="border-top: 1px solid #d9d9d9;"></div>
                                </td>
                            </tr>
                            </tbody>
                        </table>

                        {{ custom_footer|raw }}
                    </td>
                </tr>
                </tbody>
            </table>
        </td>
    </tr>
    </tbody>
</table>